<script>
document.addEventListener('DOMContentLoaded', function () {
    var ctx = document.getElementById('revenueChart').getContext('2d');

    var data = {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug'],
        datasets: [{
            label: 'Revenue',
            yAxisID: 'revenue',
            data: [10, 5, -2, 8, -15, 10, -5, 12],
             borderColor:'rgb(128, 131, 253)',
            backgroundColor: 'rgb(128, 131, 253)',
            // borderWidth: 0.5,
            barThickness: 10,
              borderRadius: {
                topRight: 15,
                topLeft: 15,
                bottomRight: 15,
                bottomLeft: 15,
            },
        }, {
            label: 'Profit/Loss',
            yAxisID: 'percentage',
            data: [-5, -10, 15, -8, 10, -2, 5, -12],
            borderColor: '#39C8E8', 
            backgroundColor: 'rgba(49, 202, 235, 1)', 
            // borderWidth: 0.5,
            barThickness: 10,
              borderRadius: {
                topRight: 15,
                topLeft: 15,
                bottomRight: 15,
                bottomLeft: 15,
            },
        }]
    };

    var options = {
        scales: {
            x: {
                display: false,
            },
            y: [
                {
                    id: 'revenue',
                    type: 'linear',
                    position: 'left',
                    gridLines: {
                    lineWidth: 0.5, // Set the width of y-axis grid lines
                }
                },
                {
                    id: 'percentage',
                    type: 'linear',
                    position: 'right',
                    ticks: {
                        max: 20,
                        min: -20,
                    },
                    gridLines: {
                    lineWidth: 0.5, // Set the width of y-axis grid lines
                }
                }
            ]
        }
    };

    var myChart = new Chart(ctx, {
        type: 'bar',
        data: data,
        options: options,
    });
});
</script>
