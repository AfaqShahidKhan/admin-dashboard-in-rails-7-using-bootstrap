
  <style>
    .graph-container {
      position: relative;
      width: 200px;
      height: 200px;
      border-radius: 50%;
      background-color: #f0f0f0;
      margin: 20px auto;
    }

    .percentage {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 24px;
      font-weight: bold;
      color: #333;
    }

    .lines {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
      background: linear-gradient(to right, #4caf50 50%, transparent 50%);
      transform: rotate(calc(var(--percentage) * 1deg));
      transform-origin: 50% 50%;
    }
  </style>


<div class="container">
  <div class="row">
    <div class="col-md-12">

      <div class="graph-container">
        <div class="percentage" id="percentage">75%</div>
        <div class="lines" style="--percentage: 75;"></div>
      </div>

      <nav class="navbar navbar-expand-md navbar-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#yearOptions">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="yearOptions">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="#" onclick="changeYear(2023)">2023</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#" onclick="changeYear(2022)">2022</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#" onclick="changeYear(2021)">2021</a>
            </li>
          </ul>
        </div>
      </nav>

      <script>
        function changeYear(year) {
          const percentageElement = document.getElementById('percentage');
          const linesElement = document.querySelector('.lines');
          const percentage = getPercentageForYear(year);
          percentageElement.innerText = `${percentage}%`;
          linesElement.style.setProperty('--percentage', percentage);
        }

        function getPercentageForYear(year) {
          // You can replace this logic with your actual data retrieval logic
          const yearPercentages = {
            2023: 75,
            2022: 67,
            2021: 35,
          };
          return yearPercentages[year] || 0;
        }

        // Set default year
        changeYear(2023);
      </script>

    </div>
  </div>
</div>

